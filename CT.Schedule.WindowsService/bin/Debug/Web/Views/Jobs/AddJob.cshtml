@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<CT.Schedule.WebApi.Model.JobModel>

<form class="form-horizontal" method="post" action="/EditJob">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">任务名称：</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" id="name" name="Name" placeholder="任务名称">
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">关联插件：</label>
        <div class="col-sm-10">
            <input type="hidden" name="PluginID" id="PluginID" value="" />
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    <span>选择关联插件</span>
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1"></ul>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">执行计划：</label>
        <div class="col-sm-10">
            <div class="radio">
                <label>
                    <input type="radio" name="runMode" value="0"> 仅执行一次(无论服务重启多少次)
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="runMode" value="1"> 每次服务启动执行一次
                </label>
            </div>
            <div class="radio">
                <label>
                    <input type="radio" name="runMode" value="2"> 定时任务,执行计划：
                </label>
            </div>
            <div class="col-sm-5">
                <div class="input-group">
                    <input type="text" class="form-control" id="runplan" name="runplan" placeholder="执行计划表达式">
                    <span class="input-group-addon"><a href="http://www.quartz-scheduler.net/documentation/quartz-2.x/tutorial/crontrigger.html" target="_blank" class="glyphicon glyphicon-question-sign" title="Cron表达式"></a></span>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="runplanMode" value="0"> 等待上次执行完成，再执行本次任务
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" name="runplanMode" value="1"> 无论上次是否执行完成，均执行本次任务
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">确认，并保存</button>
        </div>
    </div>
</form>
<script language="javascript" type="text/javascript">
    $(function () {
        $.getJSON("/pluginsData", function (json) {
            if (json) {
                for (var i = 0; i < json.length; i++) {
                    var item = json[i];
                    $('.dropdown-menu').append('<li><a href="javascript:;" plugin="' + item["Id"] + '">' + item['Name'] + '(' + item["AssemblyInfo"] + ')</a></li>');
                }
            }
        });
        $('.dropdown-menu').on('click', 'a', function () {
            $('.caret').prev().html($(this).text());
            $('#PluginID').val($(this).attr('plugin'));
            $('.dropdown-menu').dropdown('toggle');
            return false;
        });
    });

</script>
